/* pages/details/details.wxss */
page{
    background: #f5f5f5;
}
.head{
    display: flex;
    height: 500rpx;
    flex-direction: column;
    align-items: center;
    justify-content:center;
    background: #fff;
}
.image{
    width: 230rpx;
height: 280rpx;

}
.title{
    font-size: 35rpx;
    font-weight: 100;
    padding: 25rpx 0 15rpx 0;
}
.author{
    font-size: 28rpx;
    /* color: #cccccc; */
    padding-bottom: 20rpx;
}
.comment{
  border-top: 20px solid #f6f6f6;
  border-bottom: 20px solid #f6f6f6;
    width: 100%;
    height: 420rpx;
    background: #fff;
    text-align: center;
}
.size{
    width: 100%;
    height: 100rpx;
    font-weight: 500;
    line-height: 100rpx;
}
.commentList{
  width: 100%;
  height: 340rpx;
  padding: 10rpx;
  display: flex;
  align-content: flex-start;
  flex-wrap: wrap;
}
.comments{
  display: table;
  background: #f6f6f6;
  padding: 8px;
  color: #cbcbcb;
  margin-left: 8px;
  margin-top: 8px;
  border-radius: 5px;
}
.synopsis{
    background: #fff;
    text-align: center;
    padding: 20rpx;
}
.footer{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: #FFF;
    border-top: 1px solid #ededed;
}
.footer_1{
    height: 100%;
    display: flex;
    align-items: center;
}
.input{
    width: 60%;
    border:1px solid #c4c4c4;
    height: 60rpx;
    border-radius: 70rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
    margin-left: 30rpx;
}
.pic{
    margin-left: 30rpx;
    width: 20%;
    display: flex;
    justify-content: space-between;
}
.xin{
    width: 40rpx;
    height: 40rpx;
}
.fx{
    width: 40rpx;
    height: 40rpx; 
}
.info{
    text-indent: 55rpx;
    font-weight: 100;
    padding: 20px;
    margin-bottom: 30px;
}