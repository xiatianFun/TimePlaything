.container{
  position: relative;
 
}
.containerz{
  display: none;
}
.playimg{
  position: absolute;
  top: 0;
  width: 280px;
  height: 280px;
  transform: rotateY(-180deg);
  backface-visibility:hidden;
}
.playimgz{
  display: block;
  width: 280px;
  height: 280px;
  transform: rotateY(0deg);
  transition: 1.5s;
  transform-style: preserve-3d;
  margin-left: 15%;
  margin-top: 14%;
   -webkit-animation:run 5s linear 2s infinite; 
}
@keyframes run{     
            from{     
                -webkit-transform:rotate(360deg);     
            }    
            to{     
                -webkit-transform:rotate(0deg);     
            }     
        }
